@model ManageUserRolesViewModel

<form method="post">
    <input type="hidden" asp-for="@Model.UserId" />
    <input type="hidden" asp-for="@Model.UserName" />
    <div class="card">
        <div class="card-header">
            <h2>Manage "@Model.UserName" Roles</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.UserRoles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleId" />
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                    <input asp-for="@Model.UserRoles[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.UserRoles[i].IsSelected">
                        @Model.UserRoles[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"/>
            <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>